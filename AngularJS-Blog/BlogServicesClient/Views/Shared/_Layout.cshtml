<!DOCTYPE html>
<html ng-app="blog">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/libs/underscore.js"></script>
    <script src="~/Scripts/libs/angular.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/app/post-controller.js"></script>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
</head>
<body ng-controller="PostsController">
     <div class="row-fluid">
        <div class="span12">
            <div class="navbar"><!--start of menu-->
						<div class="navbar-inner">
							<div class="container">
								<!-- .btn-navbar is used as the toggle for collapsed navbar content -->
								<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								</a>
								<!-- Be sure to leave the brand out there if you want it shown -->
								<a class="brand" href="">AngularJS Blog</a>
								<!-- Everything you want hidden at 940px or less, place within here -->
								<div class="nav-collapse collapse">
									<!-- .nav, .navbar-search, .navbar-form, etc -->
									<ul class="nav">
										<li><a href="#/">Posts</a></li>										
										<li><a href="#/category/0/posts">Fruits</a></li>		
                                        <li><a href="#/category/1/posts">Veggies</a></li>								
                                        <li><a href="#/category/2/posts">Herbs</a></li>								
									</ul>
								</div>								
							</div>
						</div>
						</div><!--end of menu-->
            <div class="span10 offset1">
                <header>
                    <h1>Places Admin Panel</h1>
                </header>
                @RenderBody() 
            </div>
        </div>
    </div>
    </div>
       
    @RenderSection("scripts", required: false)
</body>
</html>
